@model MumsBlog.Models.PostAndUserViewModel
@{
    ViewData["Title"] = "Home Page";
}

<br />

@if (Model.BlogPosts.Count() == 0)
{
    <div class="text-primary form-border"> No Blog Posts Found!</div>
}
else
{
    @foreach (var item in Model.BlogPosts)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-9 mx-auto; card">
                    <article>
                        <div id="title">
                            <header class="text-center">
                                <h2>
                                    <br />
                                    <br />
                                    @Html.DisplayFor(m => item.PostTitle)
                                </h2>
                            </header>
                        </div>

                        <br />

                        @*<div >
                                <label asp-for="CategoryId" class="control-label">Blog Category</label>
                                <select asp-for="CategoryId" asp-items="@(new SelectList(Model.BlogCategories,"Id","Name"))" -control"></select>
                            </div>*@

                        <div class="post-details">
                            <ul style="list-style-type:none">
                                <li><b><i>Category:</i></b> @Html.DisplayFor(m => item.Category)</li>
                                @*<li><b><i>Summary:</i></b> @Html.DisplayFor(m => item.Description)</li>*@
                                <li><b><i>Date Published:</i></b> @Html.DisplayFor(m => item.DateAdded)</li>
                            </ul>
                        </div>

                        @*<div>
                                <p>Category: @Html.DisplayFor(m => item.Category)</p>
                            </div>

                            <br />

                            <div>
                                <p>@Html.DisplayFor(m => item.Description)</p>
                            </div>

                            <br />

                            <div>
                                <p>Date Published: @Html.DisplayFor(m => item.DateAdded)</p>
                            </div>*@

                        <br />

                        <div>
                            <p>@Html.DisplayFor(m => item.Content)</p>
                        </div>

                        <br />

                        <div class="pull-right">
                            <p><small>By @Html.DisplayFor(m => item.Author)</small></p>
                        </div>

                    </article>
                </div>
                <div class="col-md-3 ml-auto">

                    <div id="title">
                        <header class="text-center">
                            <h2>
                                <br />
                                <br />
                            </h2>
                        </header>
                    </div>
                    <div>
                        <br />
                        <h4>Summary:</h4>
                        <p>@Html.DisplayFor(m => item.Description)</p>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <hr />
    }
}

