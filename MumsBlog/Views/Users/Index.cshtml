@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<form asp-controller="Users" asp-action="Index" method="get">
    <br />
    <h2>Registered Users</h2>
    <hr />

    <div style="height:60px;">
        <div class="col-sm-3" style="padding-top:20px;">
            <a asp-controller="Identity/Account" asp-action="Register" class="btn btn-primary" style="width:200px;">
                <span class="fa fa-plus"></span> &nbsp; Create New Customer
            </a>
        </div>
        <div class="col-sm-9">
            <div class="row">
                <div class="col-sm-12 text-right">
                    <b>Search: </b>
                    <label class="radio-inline">@Html.RadioButton("option", "name")Name</label>
                    <label class="radio-inline">@Html.RadioButton("option", "email")Email</label>
                </div>
            </div>
            <div class="row">
                <div class="pull-right">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary">
                        <span class="fa fa-search"></span> Search
                    </button>
                </div>
                <div class="pull-right">
                    @Html.Editor("search", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>

    <hr />
    <br />
    <div class="form-border">
        <table class="table table-condensed table-hover">
            <tr>
                <th style="vertical-align:middle">
                    @Html.DisplayNameFor(m => m.FirstName)
                </th>
                <th style="vertical-align:middle">
                    @Html.DisplayNameFor(m => m.LastName)
                </th>
                <th style="vertical-align:middle">
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align:middle">
                        @Html.DisplayFor(m => item.FirstName)
                    </td>
                    <td style="vertical-align:middle">
                        @Html.DisplayFor(m => item.LastName)
                    </td>
                    <td style="vertical-align:middle">
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td></td>
                    <td></td>
                    <td style="vertical-align:middle">
                        <partial name="_TableButtonPartial" , model='new IndividualButtonPartial { CustomerId = item.Id }' />
                    </td>
                </tr>

            }
        </table>
    </div>
</form>

